{
  "$id": "Permission",
  "type": "object",
  "description": "minimal unit of permissions, string with the unique permission name or a mask",
  "required": ["id", "name", "version"],
  "properties": {
    "id": {
      "type": "string",
      "description": "permission string",
      "maxLength": "128",
      "pattern": "^(?:\\*|(?:[a-zA-Z]{3,32}(?:\\.[a-zA-Z]{3,32})*))$"
    },
    "reserved": {
      "type": "boolean",
      "default": false,
      "description": "cant be altered when set as reserved"
    },
    "name": {
      "$ref": "common#/definitions/humanReadable"
    },
    "deprecated": {
      "type": "boolean",
      "description": "when set to true - do not use that permission in the future",
      "default": false
    },
    "version": {
      "type": "string",
      "description": "semver, so that updates are only happening in the >= fashion",
      "pattern": "^0|[1-9]\\d*\\.0|[1-9]\\d*\\.0|[1-9]\\d*$",
      "maxLength": 256
    },
    "actionType": {
      "type": "array",
      "description": "tag-like action classification",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/actionType"
      }
    }
  },
  "definitions": {
    "actionType": {
      "type": "string",
      "description": "create - POST, read - GET, update - PATCH, delete - DELETE",
      "enum": ["POST", "GET", "DELETE", "PATCH"]
    }
  }
}
