{
  "$id": "Role",
  "type": "object",
  "required": ["id", "name", "scoped"],
  "anyOf": [{
    "required": ["include"]
  }, {
    "required": ["exclude"]
  }],
  "properties": {
    "id": {
      "$ref": "common#/definitions/uint64_id"
    },
    "name": {
      "type": "string",
      "description": "Human readable role name, ie `System Admin`"
    },
    "include": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "Permission#/properties/id"
      }
    },
    "exclude": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "Permission#/properties/id"
      }
    },
    "meta": {
      "type": "object",
      "description": "any scalar meta that could be useful in business logic",
      "additionalProperties": {
        "anyOf": [{
          "type": "string"
        }, {
          "type": "boolean"
        }, {
          "type": "number"
        }]
      }
    }
  }
}
