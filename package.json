{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "semantic-release": "semantic-release",
    "prebootstrap": "yarn --frozen-lockfile --check-files",
    "bootstrap": "lerna bootstrap -- --frozen-lockfile --check-files",
    "postbootstrap": "yarn build",
    "lint": "lerna run lint --stream",
    "pretest": "yarn lint",
    "test": "jest",
    "prebuild": "yarn clean",
    "build": "tsc -b packages/*/tsconfig.build.json",
    "clean": "rimraf packages/*/lib"
  },
  "resolutions": {
    "**/level-iterator-stream/readable-stream": "3.x.x"
  },
  "devDependencies": {
    "@makeomatic/deploy": "^8.0.1",
    "@semantic-release/exec": "^3.1.3",
    "@semantic-release/git": "^7.0.5",
    "@types/jest": "^23.3.5",
    "@types/node": "^10.12.0",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "rimraf": "^2.6.2",
    "semantic-release-monorepo": "^6.1.1",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3",
    "tslint-config-blvd": "^1.2.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "./node_modules/@makeomatic/deploy/git-hooks/prepare-commit-msg $HUSKY_GIT_PARAMS"
    }
  }
}
